@section Scripts {

    <script type="text/javascript">

        //------------- Question 1--------------------\\
        $(document).ready(function () {
            $.ajax({
                url: "@Url.Action("Question1","SectionA")",
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data)
                {
                    /* Continue here */
                    $("#table-body").empty();
                    $(data.relationship).each((i, e) => {
                        $("#table-body").append('<tr><td colspan="3" class="text-center">' +
                            '<span class="text-info">' + e.Customer + 'is a Customer </span>' +
                            '<span class= "text-dark"> who is managed by' + e.Employee + '</span >' +
                            '<span class="text-info"> who reports to ' + e.ReportsTo + '</span>' +
                            '</td></tr>');
                    });
                   /** End Question 1 **/ /*** Total 5 MARKS ****/
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
        //-------------------------------------\\
    </script>
}

